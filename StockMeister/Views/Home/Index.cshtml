@using Microsoft.AspNetCore.Identity
@model Company
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Landing Page";
}

<div class="">
    <div class="row bg-light text-dark align-items-between" style="height: 500px">
        <h1 class="heading  mt-5 text-center">Stock Meister</h1>
        <div class="row justify-content-around">
            <div class="col-4 offset-2">
                <h4 class="">Increases</h4>
                <ul class="list-unstyled">
                    <li><i class="fa-solid fa-scale-balanced"></i>&nbsp; Accurate sales data</li>
                    <li><i class="fa-solid fa-clock"></i>&nbsp; Time efficiency of your employees</li>
                    <li><i class="fa-solid fa-sack-dollar"></i>&nbsp; Profit margins</li>
                </ul>
            </div>
            <div class="col-4">
                <h4 class="">Decreases</h4>
                <ul class="list-unstyled">
                    <li><i class="fa-solid fa-circle-exclamation"></i>&nbsp; Unecesary money spending</li>
                    <li><i class="fa-solid fa-cubes-stacked"></i>&nbsp; Missing stock</li>
                    <li><i class="fa-solid fa-arrow-trend-up"></i>&nbsp; Time worrying about stock levels</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="bg-dark text-light" style="height: 500px">
        <div class="container">
            <h1 class="heading pt-4 text-center">How Stock Meister Works</h1>
            <h2 class="heading mt-3 text-center">Business Page</h2>
            <div class="row justify-content-center">
                <div class="col-6">
                    <p class="">Create a business page to start of with. Once that is done you can add users to run the page. 
                You create categories that will be used to count the stock.
                Then the process of adding products the the page begins.</p>
                </div>
            </div>
            <h2 class="heading mt-3 text-center">Users</h2>
            <div class="row justify-content-center">
                <div class="col-6">
                    <h4 class="heading">Manager</h4>
                    <p>These users can add and remove user accounts and they have access to sales data generated bythe page</p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-6">
                    <h4 class="heading">Admin</h4>
                    <p>These users are responsible for doing stock taking and reading in sales </p>
                </div>
            </div>  
        </div>
    </div>
    <div class="row bg-light text-dark justify-content-center" style="height: 500px">
        <h1 class="heading mt-5 text-center">Start of by creating your business page</h1>
        <div class="col-5 mt-0">
            @if (SignInManager.IsSignedIn(User))
            {
                <form class="" method="post" asp-controller="Company" asp-action="Create">
                    <div class="form-floating ">
                        <input class="form-control" asp-for="BusinessName" placeholder="Business Name" id="businessName"/>
                        <label asp-for="BusinessName">Business Name</label>
                        <span asp-validation-for="BusinessName"></span>
                    </div>
                    <div class="mt-3 text-center">
                        <button class="btn btn-primary w-50" type="submit">Create Page</button>
                    </div>
                </form>
            }
            else
            {
            }
        </div>
    </div>
</div>

