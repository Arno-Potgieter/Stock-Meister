@using Microsoft.AspNetCore.Identity
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row mb-5">
        <div class="col-9">
            <h1 class="heading">Categories</h1>            
        </div>
        <div class="col-3 text-end">
            <button class="btn btn-primary mt-3" onclick="CategoryModal();">Create</button>
        </div>
    </div>
    <div class="">
        <table class="table table-hover align-middle" id="categoryTable" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th class="text-center">Functions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<partial name="_CreateCategory" />
<partial name="_DeleteCategory" />


@section Scripts {
    <script src="~/js/category.js"></script>
}