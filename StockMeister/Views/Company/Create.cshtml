@using Microsoft.AspNetCore.Identity
@model Company
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "GetCreate";
}

<div>
    <h3 class="heading text-dark mt-3">Welcome to Stock Meister create a business page to get started</h3>
    <div class="row">
        <div class="col">
            <h5 class="sub-heading">Once you create a business page you can</h5>
            <ul>
                <li>create categories</li>
                <li>Create Products</li>
                <li>Add users to manage the page</li>
            </ul>
            <div>
                <h5 class="sub-heading">Admin Users</h5>
                <p>When your page is all set up your admin users can create products for the business. 
                <br />Once that is done you can choose how often stock staking needs to take place.</p>
                <p>Everytime stock taking takes place records will be kept of who did the stock taking, the date and what stock was'nt balanced</p>
            </div>
            <div>
                <h5 class="sub-heading">Manager Users</h5>
                <p>Your Managers of the page wil have access to sales data showing your daily, monthly and annual sales.</p>
            </div>        
        </div>
        <div class="col">

        </div>
    </div>
    <div>
        <h4 class="mt-5 heading">Start of by adding your business name</h4>
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="row">
                <div class=col>
                    <form class="mt-2" method="post" asp-controller="Company" asp-action="Create">
                        <div class="form-floating ">
                            <input class="form-control" asp-for="BusinessName" placeholder="Business Name" id="businessName"/>
                            <label asp-for="BusinessName">Business Name</label>
                            <span asp-validation-for="BusinessName"></span>
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-primary" type="submit">Create Page</button>
                        </div>
                    </form>
                </div>
                <div class="col">

                </div>
            </div>
        }
        else
        {
            <h5 class="mt-3 heading">Before you can create a page you need to have an account</h5>
            <div class="row">
                <div>

                </div>
            </div>
        }
    </div>
</div>

